@import '../../style/font.wxss';
.index-container{
  height:100%;
  width:100%;
}
.index-title{
  width:100%;
  height:150rpx;
  color:#FFFFFF;
  text-align: center;
  line-height: 200rpx;
  font-size:38rpx;
  font-weight: bold;
}
.index-top{
  position:fixed;
  width:100%;
  height:260rpx;
  top:0;
  left:0;
  z-index:2;
  background: linear-gradient(rgba(238,126,130,1), rgba(255,170,199,0.8));
  padding-bottom:33rpx;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index-top .input{
  display:flex;
  width:80%;
  height:70rpx;
  background:#ffffff;
  border-radius: 25px;
  justify-content: center;
}
.index-top .input input{
  display:block;
  width:100%;
  height:100%;
  margin-left:70rpx;
  margin-right:70rpx;
  background:#ffffff;
  position: relative;
}
.index-top .input .iconsearch{
  position:absolute;
  font-size:50rpx;
  left:80rpx;
  height:10rpx;
  line-height:70rpx;
  z-index: 1;
  color:rgb(238,126,130);
}
.index-top .input .searchtext{
  font-size:32rpx;
  line-height:70rpx;
  text-align: center;
  color:#aaaaaa;
}
.index-sroll-content{
  width:100%;
  height:100%;
  background:#ffffff;
}
.index-class-table{
  display:flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
  width:100%;
  height:auto;
  align-items: center;
  justify-items: flex-start;
  margin-top:267rpx;
  padding-bottom:20rpx;
  margin-left:10rpx;
}
.index-class-table .goodstypeitem{
  width:110rpx;
  height:110rpx;
  margin-top:15rpx;
  margin-left:30rpx;
  display:flex;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
}
.index-class-table .goodstypeitem .class-icon{
  width:100rpx;
  height:100rpx;
}
.index-class-table .goodstypeitem .class-text{
  width:110rpx;
  height:10rpx;
  color:#333333;
  font-size:22rpx;
  line-height:1rpx;
  margin-top:-3px;
  text-align: center;
}
.index-pop-goods-list{
  height:auto;
  width:100%;
  position: relative;
}
.index-pop-goods-list .top-title{
  width: 100%;
  height: 28px;
  position: relative;
  
}