/* components/navigationBar/navigationBar.wxss */
@import '../../style/font.wxss';
.index-bottom-oprs{
  position: fixed;
  bottom:0px;
  width:100%;
  height:170rpx;
  border-top: solid 1rpx #eee;
  background: linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,1));
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}
.index-bottom-oprs .menu{
  width:50%;
  height:120rpx;
  text-align: center;
  color:#fab1c3;
}
.index-bottom-oprs .menu.selected{
  color:#c93d60;
}
.index-bottom-oprs .iconfont{
  height:80rpx;
  width:100%;
  font-size:48rpx;
  line-height:80rpx;
}
.index-bottom-oprs .text{
  height:40rpx;
  width:100%;
  font-size:30rpx;
  line-height:40rpx;
}