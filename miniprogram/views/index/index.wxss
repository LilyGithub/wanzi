page{
  background: linear-gradient(rgba(238,126,130,1), rgba(255,170,199,0.8));
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height:100%;
  width:100%;
}
.index-container{
  height:100%;
  width:100%;
}
.index-title{
  width:100%;
  height:150rpx;
  color:#FFFFFF;
  text-align: center;
  line-height: 200rpx;
  font-size:38rpx;
  font-weight: bold;
}
.index-top{
  position:fixed;
  width:100%;
  height:230rpx;
  top:0;
  left:0;
  z-index:2;
  background: linear-gradient(rgba(238,126,130,1), rgba(255,170,199,0.8));
  padding-bottom:33rpx;
  border-bottom-left-radius: 30px;
  border-bottom-right-radius: 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.index-top .input{
  display:flex;
  width:80%;
  height:70rpx;
  background:#ffffff;
  border-radius: 25px;
  justify-content: center;
}
.index-top .input input{
  display:block;
  width:100%;
  height:100%;
  margin-left:70rpx;
  margin-right:70rpx;
  background:#ffffff;
}
.index-top .input .iconsearch{
  position:absolute;
  font-size:60rpx;
  left:80rpx;
  z-index: 1;
}
.index-top .input .searchtext{
  font-size:32rpx;
  line-height:70rpx;
  text-align: center;
  color:#aaaaaa;
}
.index-sroll-content{
  width:100%;
  height:100%;
  background:#ffffff;
}
.index-class-table{
  display:flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
  width:100%;
  height:auto;
  align-items: center;
  justify-items: flex-start;
  margin-top:267rpx;
  padding-bottom:20px;
  margin-left:10rpx;
}
.index-class-table .goodstypeitem{
  width:110rpx;
  height:110rpx;
  margin-top:15rpx;
  margin-left:30rpx;
  display:flex;
  flex-wrap: nowrap;
  flex-direction: column;
  align-items: center;
}
.index-class-table .goodstypeitem .class-icon{
  width:100rpx;
  height:100rpx;
}
.index-class-table .goodstypeitem .class-text{
  width:110rpx;
  height:10rpx;
  color:#333333;
  font-size:22rpx;
  line-height:1rpx;
  margin-top:-3px;
  text-align: center;
}
.index-pop-goods-list{
  height:auto;
  width:100%;
  position: relative;
}
.index-pop-goods-list .top-title{
  width:100px;
  height:40px;
  position: relative;
  margin-left:50%;
  left:-50px;
}
.index-bottom-oprs{
  position: fixed;
  bottom:0px;
  width:100%;
  height:170rpx;
  border-top: solid 1rpx #eee;
  background: linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,1));
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}
.index-bottom-oprs .menu{
  width:50%;
  height:120rpx;
  text-align: center;
  color:#fab1c3;
}
.index-bottom-oprs .menu.selected{
  color:#c93d60;
}
.index-bottom-oprs .iconfont{
  height:80rpx;
  width:100%;
  font-size:48rpx;
  line-height:80rpx;
}
.index-bottom-oprs .text{
  height:40rpx;
  width:100%;
  font-size:30rpx;
  line-height:40rpx;
}

