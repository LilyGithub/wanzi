/* miniprogram/views/sortPage/sortPage.wxss */
.page{
  width:100%;
  height:100%;
  background:#fff;
}
view, scroll-view{
  box-sizing: border-box;
  overflow: hidden;
}
.sort-tops{
  position: fixed;
  top:0;
  width:100%;
  height:90px;
  background:#fff;
  border-bottom:1rpx solid rgb(252, 234, 234);
  color:rgb(201, 61, 96);
  line-height:130px;
  text-align: center;
  font-size:36rpx;
}
.sort-bottoms{
  position: fixed;
  bottom:0;
  width:100%;
  height:60px;
  background:#fff;
}
.sort-content{
  width:100%;
  height:100%;
  padding-top:90px;
  display:flex;
  flex-direction: row;
}
.sort-content .lefts{
  width:28%;
  height:100%;
  background:#fff;
}
.sort-content .rights{
  width:72%;
  height:100%;
  background:#fff;
}
.sort-content .lefts .item{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  text-align: center;
  font-size:28rpx;
  background:rgb(241, 136, 143);
  color:#FFF;
}
.sort-content .lefts .item.selected{
  color:rgb(248, 171, 171) !important;
  background:#fff !important;
}
.sort-content .rights .item{
  width:33.33%;
  height:300rpx;
  background:#fff;
  float:left;
}
.sort-content .rights .item image{
  width: 100%;
  height:240rpx;
}
.sort-content .rights .item text{
  width: 100%;
  height:60rpx;
  line-height:60rpx;
  color:rgb(248, 171, 171);
  display:block;
  text-align: center;
  font-size:25rpx;
}
